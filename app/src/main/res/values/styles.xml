<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.MoviesGridView" parent="AppTheme">
        <item name="android:columnWidth">@dimen/movies_grid_column_width</item>
        <item name="android:horizontalSpacing">@dimen/movies_grid_horizontal_spacing</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:verticalSpacing">@dimen/movies_grid_vertical_spacing</item>
    </style>

</resources>
